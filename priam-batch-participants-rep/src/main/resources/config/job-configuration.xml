        <property name="delegates">
            <list>
                <ref bean="writerDeleteToTableParticipants" />
                <ref bean="writerInsertToTableParticipants" />
            </list>
        </property>
    </bean>-->

    <!--<bean id="writerDeleteToTableParticipants" class="org.springframework.batch.item.database.JdbcBatchItemWriter" scope="step">
        <property name="dataSource" ref="dataSource"/>
        <property name="assertUpdates" value="false"/>
